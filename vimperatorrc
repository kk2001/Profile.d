" Scroll settings
noremap j 5j
noremap k 5k
noremap h <C-p>
noremap l <C-n>

let mapleader = ","
noremap <leader>bd :tabopen www.baidu.com<cr>
noremap <leader>gg :tabopen www.google.com/ncr<cr>
noremap <leader>gh :tabopen github.com/saipanno<cr>
noremap <leader>sp :tabopen saipanno.com<cr>
noremap <leader>gm :tabopen www.gmail.com<cr>
noremap <leader>vx :tabopen www.v2ex.com<cr>
noremap <leader>wb :tabopen weibo.com<cr>
noremap <leader>zh :tabopen www.zhihu.com<cr>

noremap y Y
noremap Y y

noremap <leader>s :source /Users/saipanno/.vimperatorrc<cr>
